{
  "name": "SSuPago", 
  "version": "1.0",
  "description": "모든 외국페이지 번역&요약",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "icon-128.png",
    "default_popup": "html/popup.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/floating_button.css"],
      "js": ["js/floating_button.js"]
    }
  ],
  "web_accessible_resources": [
    "icon-128.png", 
    "normal.png", "clicked.png", 
    "html/iframe.html"],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*/*"
  ]
}